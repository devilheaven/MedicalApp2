<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManualActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/DataTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Result"
            android:textAlignment="center"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:foregroundGravity="center"
            android:rowCount="10"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/weightTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:text=" 體重 : "
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:text="Kg"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sdpTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:text=" 收縮壓 : "
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextSdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/mmhgSdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:text="mmHg"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dbpTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:text=" 舒張壓 : "
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextDbp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/mmhgDbp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="2"
                android:text="mmHg"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/hrTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:text=" 心率 : "
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextHr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="1"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/bpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="2"
                android:text="bpm"
                android:textSize="20sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_columnSpan="3"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:background="#000000" />

        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="10">

            <View
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:layout_columnSpan="3"/>

            <TextView
                android:id="@+id/ConditionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Condition"
                android:textAlignment="center"
                android:textStyle="bold" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:foregroundGravity="center"
                android:rowCount="10"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

                <TextView
                    android:id="@+id/heightTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:text=" 身高 : "
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editTextHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:ems="10"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/cm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:text="Cm"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/dateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:text=" 日期 : "
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editTextDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:ems="10"
                    android:inputType="date" />

                <TextView
                    android:id="@+id/TestCondTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:text=" 期間 : "
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/DoEat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill"
                    android:dropDownWidth="wrap_content"
                    android:entries="@array/BIState"
                    android:textSize="24sp"
                    android:visibility="visible"></Spinner>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="5dp"
                    android:layout_row="7"
                    android:layout_column="0"
                    android:layout_columnSpan="3"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_row="8"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:background="#000000" />

            </GridLayout>

        </LinearLayout>

        <Button
            android:id="@+id/deviceSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="top"
            android:text="儲存"
            android:textAllCaps="false" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp" />

        <Button
            android:id="@+id/deviceClear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="top"
            android:text="清除"
            android:textAllCaps="false" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>