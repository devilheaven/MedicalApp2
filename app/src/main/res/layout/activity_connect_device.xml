<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConnectDeviceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="10">
            <TextView
                android:id="@+id/DataTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Data"
                android:textAlignment="center"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/WeightTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="體重計"
                android:textAlignment="center"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000000"/>

            <TextView
                android:id="@+id/WeightBluetoothRespond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="Result"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000000"/>
            <TextView
                android:id="@+id/BloodTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="血壓計"
                android:textAlignment="center"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000000"/>

            <TextView
                android:id="@+id/BloodBluetoothRespond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="Result"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000000"/>
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:columnCount="3"
            android:rowCount="15">

            <TextView
                android:id="@+id/DeviceTitle"
                android:layout_width="match_parent"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:layout_gravity="center"
                android:text="Device"
                android:textAlignment="center"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/deviceSelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:dropDownWidth="wrap_content"
                android:visibility="visible"> </Spinner>

            <TextView
                android:id="@+id/textBluetoothStat"
                android:layout_width="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:text=" Device Status"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/switchBluetooth"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_columnSpan="1" />
        </GridLayout>

        <Spinner
            android:id="@+id/DoEat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:dropDownWidth="wrap_content"
            android:entries="@array/BIState"
            android:visibility="visible"> </Spinner>
        <Button
            android:id="@+id/deviceGetData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Get Data"
            android:textAllCaps="false" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
